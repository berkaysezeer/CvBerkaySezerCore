@using EntityLayer.Concrete
@model Header
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0 text-dark">Başlık</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="#">Admin</a></li>
					<li class="breadcrumb-item active">Başlık</li>
				</ol>
			</div>
		</div>
		<div class="row">
			<div class="col-md-8">
				<div class="card">
					<div class="card-body p-0">
						<table id="tblHeader" class="table table-bordered table-striped">
							<thead>
								<tr>
									<th>Ad Soyad</th>
									<th>Başlık</th>
									<th>Ünvan</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>@Model.Name</td>
									<td>@Model.Head</td>
									<td>@Model.Title</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Bilgileri Düzenle</h3>
					</div>
					@using (Html.BeginForm("Index", "Header", FormMethod.Post))
					{
						@Html.HiddenFor(x => x.Id)
						<div class="card-body">
							<div class="form-group">
								@Html.LabelFor(x => x.Name, "Ad Soyad", new { @class = "" })
								@Html.TextAreaFor(x => x.Name, new { @class = "form-control", @rows = "6" })
								@Html.ValidationMessageFor(x => x.Name, "", new { @class = "small", @style = "color:red;" })
							</div>
							<div class="form-group">
								@Html.LabelFor(x => x.Head, "Başlık", new { @class = "" })
								@Html.TextBoxFor(x => x.Head, "", new { @class = "form-control" })
								@Html.ValidationMessageFor(x => x.Head, "", new { @class = "small", @style = "color:red;" })
							</div>
							<div class="form-group">
								@Html.LabelFor(x => x.Title, "Ünvan", new { @class = "" })
								@Html.TextBoxFor(x => x.Title, "", new { @class = "form-control" })
								@Html.ValidationMessageFor(x => x.Title, "", new { @class = "small", @style = "color:red;" })
							</div>
						</div>

						<div class="card-footer">
							<button type="submit" class="btn btn-primary btn-block">Kaydet</button>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>


<script src="~/template/admin/content/plugins/jquery/jquery.min.js"></script>
<script>
	$(function () {
		$("#tblHeader").DataTable({
			"paging": true,
			"lengthChange": false,
			"searching": false,
			"ordering": true,
			"info": true,
			"autoWidth": false,
			"responsive": true,
			"language": {
				"url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
			}
		});

	});</script>