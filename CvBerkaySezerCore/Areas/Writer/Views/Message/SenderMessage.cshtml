@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Writer/Views/Shared/_WriterLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Gönderilen Mesajlar</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Alıcı
                                </th>
                                <th>
                                    Konu
                                </th>
                                <th>
                                    İçerik
                                </th>
                                <th>
                                    Tarih
                                </th>
                                <th>
                                    İşlemler
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var message in Model)
                            {
                                <tr>
                                    <td>(@message.ReceiverFullName) (@message.Receiver)</td>
                                    <td>@message.Subject</td>
                                    <td>@(message.Content.Length > 50 ? message.Content.Substring(0, 47) : message.Content)</td>
                                    <td>@message.Date.ToShortDateString()</td>
                                    <td> <a href="#" class="brn btn-danger btn-sm">Sil</a></td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

