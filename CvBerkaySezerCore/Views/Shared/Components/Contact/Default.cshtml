<div class="section px-2 px-lg-4 pb-4 pt-5 mb-5" id="contact">
	<div class="container-narrow">
		<div class="text-center mb-5">
			<h2 class="marker marker-center">İletişim</h2>
		</div>
		<div class="row justify-content-center">
			<div class="col-md-8" data-aos="zoom-in" data-aos-delay="100">
				<div class="bg-light my-2 p-3 pt-2">
					@using (Html.BeginForm("Add", "Message", FormMethod.Post))
					{
						<div class="form-group my-2">
							@Html.Label("FullName","Ad Soyad", new {@class = "form-label fw-bolder"})
							@Html.TextBox("FullName", "",new {@class = "form-control"})
							@Html.ValidationMessage("FullName", "", new { @class = "small", @style = "color:red" })
						</div>
						<div class="form-group my-2">
							@Html.Label("Subject","Konu", new {@class = "form-label fw-bolder"})
							@Html.TextBox("Subject", "",new {@class = "form-control"})
							@Html.ValidationMessage("Subject", "", new { @class = "small", @style = "color:red" })
						</div>
						<div class="form-group my-2">
							@Html.Label("Email","E-posta", new {@class = "form-label fw-bolder"})
							@Html.TextBox("Email", "",new {@class = "form-control", type = "email"})
							@Html.ValidationMessage("Email", "", new { @class = "small", @style = "color:red" })
						</div>
						<div class="form-group my-2">
							@Html.Label("Message","Mesaj", new {@class = "form-label fw-bolder"})
							@Html.TextArea("Message", new {@class = "form-control", col = "4"})
							@Html.ValidationMessage("Message", "", new { @class = "small", @style = "color:red" })
						</div>
						<button class="btn btn-primary mt-2" type="submit">Gönder</button>
					}
				</div>
			</div>
		</div>
	</div>
</div>