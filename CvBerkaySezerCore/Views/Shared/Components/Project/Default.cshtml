@using EntityLayer.Concrete
@model List<Project>
<div class="section px-2 px-lg-4 pt-5" id="portfolio">
	<div class="container">
		<div class="text-center mb-5">
			<h2 class="marker marker-center">Projeler</h2>
		</div>
		<div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
			<div class="grid-sizer"></div>
			@foreach (var project in Model)
			{
				<div class="grid-item">
					<a href="@project.ProjectUrl">
						<figure class="portfolio-item">
							<img src="@project.ImageUrl" data-bp="@project.ImageUrl" />
							<figcaption>
								<h4 class="h5 mb-0">@project.Title</h4>
								<div>@project.Description</div>
							</figcaption>
						</figure>
					</a>
				</div>
			}

		</div>
	</div>
</div>