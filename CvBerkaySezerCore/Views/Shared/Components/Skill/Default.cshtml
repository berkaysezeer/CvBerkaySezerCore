@using EntityLayer.Concrete
@model List<Skill>
<div class="section px-3 px-lg-4 pt-5" id="skills">
	<div class="container-narrow">
		<div class="text-center mb-5">
			<h2 class="marker marker-center">Yetenekler</h2>
		</div>

		<div class="p-3 text-center">
			<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-3 bg-light p-3">
					@{
						int delay = 100;
						int delayLast = 100;
						int skillCount = Model.Count;
						int take = 0;
						int lastTake = 0;

						if (skillCount % 2 == 0)
						{
							take = skillCount / 2;
							lastTake = take;
						}
						else
						{
							take = (skillCount / 2) + 1;
							lastTake = take - 1;
						}
					}
					@foreach (var skill in Model.Take(take))
					{
						<div class="">
							<div class="text-small fw-bolder"><span class="me-auto">@skill.Title</span></div>
						</div>

						{ delay += 100; }
					}

				</div>
				<div class="col-md-3 bg-light p-3">
					@foreach (var skill in Model.TakeLast(lastTake))
					{
						<div class="">
							<div class="text-small fw-bolder"><span class="me-auto">@skill.Title</span></div>
						</div>

						{ delayLast += 100; }
					}
				</div>
				<div class="col-md-3"></div>
			</div>
		</div>
	</div>
</div>