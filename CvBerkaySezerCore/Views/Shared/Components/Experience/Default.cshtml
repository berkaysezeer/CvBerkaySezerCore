@using EntityLayer.Concrete
@model List<Experience>
<div class="section px-3 px-lg-4 pt-5" id="experience">
	<div class="container-narrow">
		<div class="text-center mb-5">
			<h2 class="marker marker-center">Yetenekler</h2>
		</div>
		<div class="row">
			@{
				int delay = 100;
			}
			@foreach (var exp in Model)
			{
				<div class="col-md-6">
					<div class="card mb-3" data-aos="fade-right" data-aos-delay="@delay">
						<div class="card-header px-3 py-2">
							<div class="d-flex justify-content-between">
								<div>
									<h3 class="h5 mb-1">@exp.Title</h3>
									<div class="text-muted text-small">@exp.Date</div>
								</div><img src="@exp.ImageUrl" width="48" height="48" alt="ui-ux" />
							</div>
						</div>
						<div class="card-body px-3 py-2">
							@exp.Description
						</div>
					</div>
				</div>

				{
					delay += 100;
				}
			}
		</div>
	</div>
</div>